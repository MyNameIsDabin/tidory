doctype html

html(lang="ko")
  head
    title [##_page_title_##]

    //- TISTORY RSS
    link(rel="alternate", type="application/rss+xml", title="[##_title_##]", href="[##_rss_url_##]")
    //- meta
    meta(charset="utf-8")
    meta(name="viewport", content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width")
    
    //- scripts
    <!--[if lt IE 9]>
    script(src="//t1.daumcdn.net/tistory_admin/lib/jquery/jquery-1.12.4.min.js")
    <![endif]-->
    <!--[if gte IE 9]><!-->
    script(src="//t1.daumcdn.net/tistory_admin/lib/jquery/jquery-3.2.1.min.js")
    <!--<![endif]-->

    style
      :stylus
        /*! Tidory demo default style */
        @import url(//fonts.googleapis.com/earlyaccess/notosanskr.css);
        *
          margin 0
          padding 0
          font-family 'Noto Sans KR', sans-serif
        body, html, s_t3, #__tidory
          background-color #fefefe
          height 100%
          width 100%
        li
          list-style-type none
        a
          text-decoration none
          color black
          font-weight 200
          transition-duration 0.3s
          &:hover
            color #ed5207 !important
        #tistorytoolbarid
          display none

  body(id="[##_body_id_##]")
    s_t3
      div#__tidory
        block TIDORY