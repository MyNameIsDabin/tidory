//- container
nav#td-blogMenu-wrapper(role="navigation")
  //- style
  style.
    #td-blogMenu-wrapper {
      margin-top: 35px;
    }
    #td-blogMenu-wrapper li {
      margin: 0 15px;
      display: inline-block;
    }
    #td-blogMenu-wrapper li a {
      font-size: 1.05em;
      color: #525252;
      font-weight: 300;
    }
  //- template
  case process.env.APP_MODE
    when 'build'
      | [##_blog_menu_##]
    when 'development'
      ul
        each ref in TIDORY.references
          li: a(href=ref.href)= ref.text